{
  "checks": {
    "appointments.border.gov.au_backend": {
      "handlers": ["default", "slack"],
      "slack": {
        "channels": [ "#webops", "#citizenship-bookings" ]
      },
      "command": "/opt/sensu/embedded/bin/check-http.rb --timeout 5 --url ${URL}${BACKEND_PING_URI} --username ${SECURITY_ADMIN_USERNAME} --password ${SECURITY_ADMIN_PASSWORD} --response-code 200",
      "interval": 180,
      "standalone": true
    },
    "appointments.border.gov.au_e2e": {
      "handlers": ["default", "slack"],
      "slack": {
        "channels": [ "#webops", "#citizenship-bookings" ]
      },
      "command": "node_modules/.bin/casperjs node_modules/citizenship-appointment-client/test/monitor/bookAppointment.js ${URL}",
      "interval": 300,
      "standalone": true
    }
  }
}
