{
  "checks": {
    "appointments.border.gov.au_pageload": {
      "handlers": ["default", "slack"],
      "slack": {
        "channels": [ "#webops" ]
      },
      "command": "/opt/sensu/embedded/bin/check-http.rb --timeout 5 --url https://appointments.border.gov.au/login --response-code 200",
      "interval": 10,
      "standalone": true
    },
    "appointments.border.gov.au_pageload-title": {
      "handlers": ["default", "slack"],
      "slack": {
        "channels": [ "#webops" ]
      },
      "command": "/opt/sensu/embedded/bin/check-http.rb --timeout 5 --url https://appointments.border.gov.au/login --query '<title>Australian Government - Citizenship Appointment Booking</title>'",
      "interval": 60,
      "standalone": true
    },
    "appointments.border.gov.au_redirect-to-login": {
      "handlers": ["default", "slack"],
      "slack": {
        "channels": [ "#webops" ]
      },
      "command": "/opt/sensu/embedded/bin/check-http.rb --timeout 5 --url https://appointments.border.gov.au/ --redirect-to https://appointments.border.gov.au/login",
      "interval": 120,
      "standalone": true
    }
  }
}